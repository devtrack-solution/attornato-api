{
  "name": "codam-erp-api",
  "version": "0.0.0",
  "description": "Codam ERP API - A backend service built with NestJS",
  "author": "DevTrack <contato@devtrack.com.br>",
  "private": true,
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://github.com/devtrack-solution/codam-erp-api.git"
  },
  "bugs": {
    "url": "https://github.com/devtrack-solution/codam-erp-api/issues"
  },
  "homepage": "https://devtrack.io/codam-erp-api",
  "contributors": [
    {
      "name": "Wilton Oliveira Ferreira",
      "email": "wilton@devtrack.com.br",
      "url": "https://github.com/wilton-ferreira"
    },
    {
      "name": "Lucas Henrique Milhomem Meira",
      "email": "lucas@devtrack.com.br",
      "url": "https://github.com/lucas-devtrack"
    }
  ],
  "scripts": {
    "prepare:setup": "chmod +x setup.sh && ./setup.sh",
    "build": "nest build",
    "build:prod": "chmod +x load-env.sh && load-env.sh && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "start": "nest start",
    "start:docker": "docker compose -f docker-compose.yml -p codam-erp-api up -d",
    "start:dev": "nest start --watch --poll=1000",
    "start:debug": "nest start --debug 0.0.0.0:9229 --watch",
    "start:prod": "node dist/main",
    "lint": "eslint . --fix",
    "fix-imports": "pnpm format && pnpm lint",
    "test": "jest --detectOpenHandles --passWithNoTests",
    "test:watch": "pnpm run test --watch",
    "test:cov": "pnpm run test --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "cross-env NODE_ENV=test jest --config test/e2e/jest-e2e.json --detectOpenHandles",
    "test:e2e:cov": "pnpm run test:e2e --coverage",
    "ci": "pnpm fix-imports && pnpm test && pnpm build",
    "gs": "ts-node tools/generate-structure.tool.ts",
    "migration:generate": "sh -c 'npx ts-node -P ./tsconfig.json -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate -d ./src/infrastructure/adapters/pgsql/typeorm.config.ts ./src/infrastructure/adapters/pgsql/migrations/$1'",
    "migration:create": "sh -c 'npx ts-node -P ./tsconfig.json -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:create -d ./src/infrastructure/adapters/pgsql/typeorm.config.ts  ./src/infrastructure/adapters/pgsql/migrations/$1'",
    "migration:run": "npx ts-node -P ./tsconfig.json -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run -d ./src/infrastructure/adapters/pgsql/typeorm.config.ts ",
    "migration:revert": "npx ts-node -P ./tsconfig.json -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert -d ./src/infrastructure/adapters/pgsql/typeorm.config.ts ",
    "prepare": "husky"
  },
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/middie": "^8.3.3",
    "@fastify/static": "^7.0.4",
    "@nestjs/config": "^3.3.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/schedule": "^4.1.2",
    "@nestjs/swagger": "^8.1.0",
    "@nestjs/throttler": "^6.3.0",
    "@nestjs/typeorm": "^11.0.0",
    "@types/passport-jwt": "^4.0.1",
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "nestjs-custom-injector": "^2.2.3",
    "passport-jwt": "^4.0.1",
    "pg": "^8.13.1",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "validator": "^13.12.0",
    "zod": "^3.24.1"
  },
  "resolutions": {
    "fastify": "^4.29.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/common": "^10.4.15",
    "@nestjs/core": "^10.4.15",
    "@nestjs/event-emitter": "^3.0.0",
    "@nestjs/platform-fastify": "^10.4.15",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.15",
    "@types/jest": "^29.5.14",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^22.10.2",
    "@types/redis": "^4.0.11",
    "@types/redis-mock": "^0.17.3",
    "@types/supertest": "^6.0.2",
    "@types/validator": "^13.12.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "fastify": "^4.29.0",
    "husky": "9.1.7",
    "jest": "^29.7.0",
    "jest-html-reporter": "^4.0.1",
    "jest-mock-extended": "4.0.0-beta1",
    "module-alias": "^2.2.3",
    "prettier": "^3.4.2",
    "redis-mock": "^0.56.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/application/**/*.(t|j)s",
      "src/commons/errors/**/*.(t|j)s",
      "src/core/domain/**/*.(t|j)s",
      "src/domain/**/*.(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/tests/",
      "src/infrastructure/adapters/pgsql/migrations/",
      "/src/.*\\.module\\.ts$"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@tests/(.*)$": "<rootDir>/tests/$1"
    },
    "coverageDirectory": "./coverage/unit",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover",
      "html"
    ],
    "testEnvironment": "node",
    "testTimeout": 30000,
    "forceExit": true
  },
  "pnpm": {
    "overrides": {
      "fastify": "4.x"
    },
    "ignoredBuiltDependencies": [
      "@nestjs/core",
      "@scarf/scarf"
    ],
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@scarf/scarf"
    ]
  }
}
